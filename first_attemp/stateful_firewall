Host = 
	secConReq ! 0 ; Host + secConEnd ! 0 ; Host 



Switch = 
	((pt = 1) . (pt <- 2)) ; Switch + 
	((pt = 2) . 0) ; Switch + 
	secConReq ? p ; Switch'



Switch' =
	((pt = 1) . (pt <- 2)) ; Switch' + 
	((pt = 2) . (pt <- 1)) ; Switch' + 
	secConEnd ? p ; Switch



Init = 
	Host || Switch




	
